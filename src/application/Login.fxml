<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
    <!-- Top AnchorPane for Login Form -->
    <top>
        <AnchorPane prefHeight="168.0" prefWidth="424.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Title Label -->
                <Label alignment="CENTER" layoutX="122.0" layoutY="22.0" prefHeight="22.0" prefWidth="180.0" style="-fx-text-fill: darkblue; -fx-font-weight: bold;" text="USER LOGIN">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- Email Label and TextField -->
                <Label alignment="CENTER" layoutX="94.0" layoutY="57.0" style="-fx-font-weight: bold;" text="Email" />
                <TextField fx:id="emailField" layoutX="85.0" layoutY="74.0" prefHeight="30.0" prefWidth="230.0" promptText="Email" style="-fx-background-color: #ffffff; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5;" />

                <!-- Password Label and PasswordField -->
                <Label alignment="CENTER" layoutX="95.0" layoutY="109.0" style="-fx-font-weight: bold;" text="Password" />
                <PasswordField fx:id="passwordField" layoutX="85.0" layoutY="126.0" prefHeight="30.0" prefWidth="230.0" promptText="Password" style="-fx-background-color: #ffffff; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </children>
        </AnchorPane>
    </top>

    <!-- Bottom AnchorPane for Buttons -->
    <bottom>
        <AnchorPane prefHeight="113.0" prefWidth="424.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Login Button -->
                <Button fx:id="loginButton" layoutX="37.0" layoutY="14.0" mnemonicParsing="false" onAction="#loginButtonAction" prefHeight="35.0" prefWidth="144.0" style="-fx-background-color: darkblue; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Login" />

                <!-- Cancel Button -->
                <Button fx:id="cancelButton" layoutX="221.0" layoutY="14.0" mnemonicParsing="false" onAction="#cancelButtonAction" prefHeight="35.0" prefWidth="160.0" style="-fx-background-color: darkblue; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Cancel" />

                <!-- Register Button (assuming it's for adding a student) -->
                <Button fx:id="registerButton" layoutX="145.0" layoutY="69.0" mnemonicParsing="false" onAction="#addStudentButtonAction" prefHeight="30.0" prefWidth="143.0" style="-fx-background-color: darkblue; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Add Student Here" />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
