<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StudentsDashboardController">

    <!-- Top Header -->
    <top>
        <HBox style="-fx-background-color: #3f51b5; -fx-padding: 10; -fx-alignment: center;">
            <!-- Logout Button -->
            <Button fx:id="logoutDashboard" onAction="#logoutDashboardAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px;" text="Logout" underline="true" />
            
            <!-- Title Label -->
            <StackPane style="-fx-padding: 5;">
                <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Student Registration System">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </StackPane>
            
            <!-- Close Button -->
            <Button fx:id="cancelDashboard" onAction="#cancelDashboardAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px;" text="âœ•">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <StackPane style="-fx-padding: 20;">
            <VBox spacing="30">
                <!-- TableView for displaying users -->
                <TableView fx:id="userTable" prefHeight="358.0" prefWidth="704.0">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name" />
                        <TableColumn fx:id="fatherNameColumn" prefWidth="100.0" text="Father's Name" />
                        <TableColumn fx:id="surnameColumn" prefWidth="100.0" text="Surname" />
                        <TableColumn fx:id="birthdayColumn" prefWidth="100.0" text="Birthday" />
                        <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Phone" />
                        <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                        <TableColumn fx:id="studentclassColumn" prefWidth="107.0" text="Class" />
                    </columns>
                </TableView>
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom Buttons -->
    <bottom>
        <AnchorPane prefHeight="147.0" prefWidth="800.0">
            <HBox alignment="CENTER" layoutX="144.0" layoutY="14.0" prefHeight="37.0" prefWidth="460.0" spacing="10">
                <!-- Buttons for CRUD operations -->
                <Button fx:id="createButton" onAction="#CreateDashboardAction" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Create" />
                <Button fx:id="updateButton" onAction="#UpdateDashboardAction" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Update" />
                <Button fx:id="deleteButton" onAction="#DeleteDashboardAction" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Delete" />
                <Button fx:id="readButton" onAction="#ReadDashboardAction" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Read" />
            </HBox>

            <!-- Sign Up and Log In Buttons -->
            <Label layoutX="253.0" layoutY="81.0" text="Don't have an account?">
                <font>
                    <Font name="System Bold Italic" size="14.0" />
                </font>
            </Label>
            <Button fx:id="signupDashboard" layoutX="414.0" layoutY="79.0" mnemonicParsing="false" onAction="#signupDashboardAction" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-padding: 5 5; -fx-background-radius: 5;" text="Sign Up" />

            <Label layoutX="291.0" layoutY="113.0" text="Have an account?">
                <font>
                    <Font name="System Bold Italic" size="14.0" />
                </font>
            </Label>
            <Button fx:id="loginDashboard" layoutX="418.0" layoutY="111.0" mnemonicParsing="false" onAction="#loginDashboardAction" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-padding: 5 5; -fx-background-radius: 5;" text="Log In" />
        </AnchorPane>
    </bottom>

</BorderPane>
